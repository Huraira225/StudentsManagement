<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/bg_rounded_corner_border_dialog"
        android:orientation="vertical"
        android:padding="40dp"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="-37dp">

        <ImageView
            android:id="@+id/login_dp"
            android:layout_width="117dp"
            android:layout_height="93dp"
            android:src="@drawable/ic_profile_screen"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="104dp" />

        <EditText
            android:id="@+id/editText_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_corner_border_dialog"
            android:ems="10"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:hint="FirstName"
            android:drawableLeft="@drawable/ic_icon_material_account"
            android:drawablePadding="8dp"
            android:inputType="textPersonName"
            android:padding="5dip"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="109dp" />

        <EditText
            android:id="@+id/editText_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_icon_material_account"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="LastName"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:padding="5dip"
            android:background="@drawable/bg_rounded_corner_border_dialog"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="174dp" />

        <EditText
            android:id="@+id/editText_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_icon_material_account"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:drawablePadding="8dp"
            android:ems="10"
            android:padding="5dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rounded_corner_border_dialog"
            android:hint="UserName"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="239dp" />

        <EditText
            android:id="@+id/editText_cnic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_icon_awesome_id_cnic"
            android:drawablePadding="8dp"
            android:ems="10"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:padding="5dip"
            android:background="@drawable/bg_rounded_corner_border_dialog"
            android:hint="Cnic *****-*******-*"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="302dp" />

        <EditText
            android:id="@+id/editText_phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="PhoneNo"
            android:drawableLeft="@drawable/ic_icon_awesome_phone"
            android:drawablePadding="8dp"
            android:padding="5dip"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_corner_border_dialog"
            android:inputType="number"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="363dp" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:padding="5dip"
            android:background="@drawable/bg_rounded_corner_border_dialog"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="Email"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_icon_zocial_email"
            android:drawablePadding="8dp"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="427dp" />

        <Button
            android:id="@+id/button_Update"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login_rounded_button"
            android:textColor="@color/black"
            android:text="Update"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="605dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>